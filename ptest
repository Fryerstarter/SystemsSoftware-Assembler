COPY	START	0
FIRST	STL		RETADR		.COMMENT
		LDB		#LENGTH		.COMMENT
		BASE	LENGTH
CLOOP	+JSUB	RDREC		.COMMENT
		LDA		LENGTH		.COMMENT
		COMP	#0		
		JEQ		ENDFIL		.COMMENT
		+JSUB	WRREC		.COMMENT
		J		CLOOP
ENDFIL	LDA		EOF
		STA 	BUFFER
		LDA		#3
		STA 	LENGTH
		+JSUB	WRREC
		J		RETADR		.COMMENT
EOF		RESW	1	
RETADR	RESW	1
LENGTH	RESW	1			.COMMENT
BUFFER	RESB	4096		.COMMENT
RDREC	CLEAR	X			.COMMENT
		CLEAR	A			.COMMENT
		CLEAR	S			.COMMENT
		+LDT	#4096		
RLOOP	TD		INPUT		.COMMENT
		JEQ		RLOOP		.COMMENT
		RD		INPUT		.COMMENT
		COMPR	A,S			.COMMENT
		JEQ	EXIT			.COMMENT
		STCH	BUFFER,X	.COMMENT
		TIXR	T			.COMMENT
		JLT	RLOOP			.COMMENT
EXIT	STX	LENGTH			.COMMENT
		RSUB				.COMMENT
INPUT	RESB	1			.COMMENT
WRREC	CLEAR	X			.COMMENT
		LDT	LENGTH		
WLOOP	TD	OUTPUT			.COMMENT
		JEQ	WLOOP			.COMMENT
		LDCH	BUFFER,X	.COMMENT
		WD	OUTPUT			.COMMENT
		TIXR	T			.COMMENT	
		JLT	WLOOP			.COMMENT	
		RSUB				.COMMENT
OUTPUT	RESB	1			.COMMENT
	END	FIRST